{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    // ==== ALIAS WAJIB ADA DI SINI ====
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    // ==================================

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "app/admin/login/page.jsx"
, "app/admin/dashboard/page.jsx", "app/admin/portofolio/page.jsx", "app/admin/articles/page.jsx", "app/user/portofolio/page.js", "app/user/portofolio/[id]/page.js"  ],
  "exclude": [
    "node_modules"
  ]
}
